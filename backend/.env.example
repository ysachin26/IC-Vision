# MarkSure AOI Backend Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ======================
# SERVER CONFIGURATION
# ======================

# Node.js environment (development, production, test)
NODE_ENV=development

# Server host and port
HOST=localhost
PORT=5001

# ======================
# DATABASE CONFIGURATION  
# ======================

# MongoDB connection URI
# For local MongoDB: mongodb://localhost:27017/marksure
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/marksure
MONGODB_URI=mongodb://localhost:27017/marksure

# Database name
DB_NAME=marksure

# Security
JWT_SECRET=marksure_development_secret_key_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,bmp,tiff

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OEM Data Sources (Optional)
ENABLE_DATASHEET_CRAWLING=false
DATASHEET_DOWNLOAD_PATH=./datasheets
CRAWLER_DELAY=5000
