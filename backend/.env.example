# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration (Add your MongoDB URI here)
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/marksure
# For MongoDB Atlas (uncomment and replace with your URI):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/marksure
DB_NAME=marksure

# Security
JWT_SECRET=marksure_development_secret_key_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,bmp,tiff

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OEM Data Sources (Optional)
ENABLE_DATASHEET_CRAWLING=false
DATASHEET_DOWNLOAD_PATH=./datasheets
CRAWLER_DELAY=5000
