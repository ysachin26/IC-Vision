# MarkSure AOI Frontend Configuration Template  
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ======================
# BACKEND API CONFIGURATION
# ======================

# Backend API base URL - Update this to match your backend server
REACT_APP_API_BASE_URL=http://localhost:5001

# WebSocket URL for real-time updates (optional)
REACT_APP_WS_URL=ws://localhost:5001

# ======================
# APPLICATION SETTINGS
# ======================

# Application name and version
REACT_APP_NAME=MarkSure AOI
REACT_APP_VERSION=2.0.0

# Environment name (affects logging and debugging)
REACT_APP_ENV=development

# Enable/disable debug mode for development
REACT_APP_DEBUG=true

# ======================
# FEATURES FLAGS
# ======================

# Enable advanced inspection features
REACT_APP_ENABLE_ADVANCED_OCR=true

# Enable analytics and reporting
REACT_APP_ENABLE_ANALYTICS=true

# Enable multi-user collaboration features
REACT_APP_ENABLE_COLLABORATION=true

# Enable experimental features (development only)
REACT_APP_ENABLE_EXPERIMENTAL=false

# ======================
# UI/UX CONFIGURATION
# ======================

# Default theme (light, dark, auto)
REACT_APP_DEFAULT_THEME=light

# Enable animations and transitions
REACT_APP_ENABLE_ANIMATIONS=true

# Default language/locale
REACT_APP_DEFAULT_LOCALE=en-US

# ======================
# FILE UPLOAD SETTINGS
# ======================

# Maximum file size for uploads (in bytes)
# 10MB = 10485760, 5MB = 5242880
REACT_APP_MAX_FILE_SIZE=10485760

# Allowed file types for image uploads
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,bmp,tiff

# ======================
# EXTERNAL SERVICES
# ======================

# Google Analytics tracking ID (optional)
# REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN for error tracking (optional)
# REACT_APP_SENTRY_DSN=https://xxx@sentry.io/xxx

# ======================
# DEVELOPMENT SETTINGS
# ======================

# API request timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# Enable service worker (production only)
REACT_APP_ENABLE_SW=false

# Show development tools and debug info
REACT_APP_SHOW_DEBUG_INFO=true

# ======================
# BRANDING & CUSTOMIZATION
# ======================

# Company/Organization name
REACT_APP_COMPANY_NAME=MarkSure Technologies

# Support email
REACT_APP_SUPPORT_EMAIL=support@marksure.com

# Documentation URL
REACT_APP_DOCS_URL=https://docs.marksure.com

# ======================
# SECURITY SETTINGS
# ======================

# Session timeout in minutes (0 = no timeout)
REACT_APP_SESSION_TIMEOUT=60

# Enable remember me functionality
REACT_APP_ENABLE_REMEMBER_ME=true

# Force HTTPS in production
REACT_APP_FORCE_HTTPS=false